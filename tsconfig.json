{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",      // Change this to ES2020 or ESNext
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
